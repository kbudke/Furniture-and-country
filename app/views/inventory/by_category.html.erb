<h1><%= "all of our #{@category} items" %></h1>

<table class="table">
	<tr>
		<th>Name</th>
		<th>Price</th>
	</tr>
	<% @products.each do |product| %>
		<tr>
			<td>
				<%= link_to product.name, show_path(id: product.id) %>
			</td>
			<td>
				<%= number_to_currency(product.price) %>
			</td>
		</tr>
	<% end %>
</table>

<%= link_to "Back Home", root_path %>