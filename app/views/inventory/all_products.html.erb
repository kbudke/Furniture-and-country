<h1>Our Entire Inventory!</h1>

<table class="table">
	<tr>
		<th>Name</th>
		<th>Price</th>
		<th>Category</th>
	</tr>
	<% @products.each do |product| %>
		<tr>
			<td>
				<%= link_to product.name, show_path(id: product.id) %>
			</td>
			<td>
				<%= number_to_currency(product.price) %>
			</td>
			<td>
				<%= link_to product.category, category_path(category: product.category) %>
			</td>	

		</tr>
	<% end %>
</table>
